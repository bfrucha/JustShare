{% extends "JustShareCoreBundle::layout.html.twig" %}

{% block title %}
  Supprimer un article - {{ parent() }}
{% endblock %}


{% block justsharecore_body %}
  <h2> Supprimer un article </h2>
  
  <p> 
    Etes-vous sur de vouloir supprimer l'article "{{ article.titre }}"
    de <i> {{ article.auteur }} </i> ?
  </p>

  
  <form action="{{ path('justsharecore_supprimer', {'id': article.id}) }}" method="post">
    <a href="{{ path('justsharecore_voir', {'id': article.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour Ã  l'article
    </a>
    
    <input type="submit" value="Supprimer" class="btn btn-danger"/>
    {{ form_rest(form) }}
  </form>
</p>

{% endblock %}
